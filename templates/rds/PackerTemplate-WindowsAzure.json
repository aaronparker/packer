{
    "variables": {
        "client_id": "",
        "client_secret": "",
        "subscription_id": "{00000000-0000-0000-0000-00000000000}",
        "tenant_id": "",
        "image_publisher": "MicrosoftWindowsDesktop",
        "image_offer": "Windows-10",
        "image_sku": "20h2-ent",
        "vm_size": "Standard_D2as_v4",
        "image_date": "",
        "working_directory": "{{env `System_DefaultWorkingDirectory`}}",
        "app_directory": "C:\\Apps",
        "winrmuser": "packer",
        "managed_image_resource_group_name": "",
        "managed_image_name": "{{user `image_offer`}}-{{user `image_sku`}}-{{user `image_date`}}",
        "locale": "en-AU",
        "apps_url": "",
        "packages_url": "",
        "tag_function": "Gold image",
        "tag_type": "WindowsVirtualDesktop",
        "tag_owner": "aaronparker",
        "tag_created_date": "",
        "build_resource_group": "rg-ImageBuild-AustraliaEast",
        "build_key_vault": "stpyimageaustraliaeast",
        "build_vnet": "vnet-ImageBuild-AustraliaEast",
        "build_subnet": "subnet-Packer",
        "build_source_repo": "",
        "destination_gallery_resource_group": "rg-Images-AustraliaEast",
        "destination_gallery_name": "sigWindowsVirtualDesktop",
        "destination_image_name": "{{user `image_publisher`}}-{{user `image_offer`}}-{{user `image_sku`}}",
        "destination_image_version": "1.0.1",
        "destination_replication_regions": "australiaeast"
    },
    "builders": [
        {
            "type": "azure-arm",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "os_type": "Windows",
            "image_publisher": "{{user `image_publisher`}}",
            "image_offer": "{{user `image_offer`}}",
            "image_sku": "{{user `image_sku`}}",
            "image_version": "latest",
            "vm_size": "{{user `vm_size`}}",
            "communicator": "winrm",
            "winrm_use_ssl": true,
            "winrm_insecure": true,
            "winrm_timeout": "5m",
            "winrm_username": "{{user `winrmuser`}}",
            "managed_image_name": "{{user `managed_image_name`}}",
            "managed_image_resource_group_name": "{{user `managed_image_resource_group_name`}}",
            "build_resource_group_name": "{{user `build_resource_group`}}",
            "build_key_vault_name": "{{user `build_key_vault`}}",
            "virtual_network_name": "{{user `build_vnet`}}",
            "virtual_network_subnet_name": "{{user `build_subnet`}}",
            "virtual_network_resource_group_name": "{{user `build_resource_group`}}",
            "private_virtual_network_with_public_ip": true,
            "azure_tags": {
                "CreatedDate": "{{user `tag_created_date`}}",
                "Function": "{{user `tag_function`}}",
                "Type": "{{user `tag_function`}}",
                "OperatingSystem": "{{user `managed_image_name`}}",
                "Owner": "{{user `tag_owner`}}",
                "Billing": "Packer",
                "Source": "{{user `build_source_repo`}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "environment_vars": [
                "Locale={{user `locale`}}",
                "PackagesUrl={{user `packages_url`}}"
            ],
            "scripts": [
                "build/rds/01_Rds-PrepImage.ps1",
                "build/common/02_Packages.ps1",
                "build/common/03_RegionLanguage.ps1",
                "build/rds/05_Rds-Roles.ps1"
            ]
        },
        {
            "type": "powershell",
            "inline": [
                "New-Item -Path \"C:\\Apps\\image-customise\" -ItemType \"Directory\" -Force -ErrorAction \"SilentlyContinue\" > $Null"
            ]
        },
        {
            "type": "file",
            "direction": "upload",
            "max_retries": 2,
            "sources": [
                "{{user `working_directory`}}\\image-customise"
            ],
            "destination": "C:\\Apps"
        },
        {
            "type": "powershell",
            "scripts": [
                "build/common/04_Customise.ps1"
            ]
        },
        {
            "type": "windows-update",
            "search_criteria": "IsInstalled=0",
            "filters": [
                "exclude:$_.Title -like '*Silverlight*'",
                "exclude:$_.Title -like '*Preview*'",
                "include:$true"
            ],
            "update_limit": 25
        },
        {
            "type": "powershell",
            "scripts": [
                "build/common/06_SupportFunctions.ps1",
                "build/rds/07_MicrosoftVcRedists.ps1",
                "build/rds/08_MicrosoftFSLogixApps.ps1",
                "build/rds/09_MicrosoftEdge.ps1",
                "build/rds/10_Microsoft365Apps.ps1",
                "build/rds/11_MicrosoftTeams.ps1",
                "build/rds/12_MicrosoftOneDrive.ps1",
                "build/rds/14_Wvd-Agents.ps1"
            ]
        },
        {
            "type": "windows-restart"
        },
        {
            "type": "powershell",
            "environment_vars": [
                "AppsUrl={{user `apps_url`}}"
            ],
            "scripts": [
                "build/rds/39_AdobeAcrobatReaderDC.ps1",
                "build/rds/40_Rds-LobApps.ps1"
            ]
        },
        {
            "type": "windows-restart"
        },
        {
            "type": "powershell",
            "scripts": [
                "build/rds/45_ResumeCitrixVDA.ps1"
            ]
        },
        {
            "type": "windows-update",
            "search_criteria": "IsInstalled=0",
            "filters": [
                "exclude:$_.Title -like '*Silverlight*'",
                "exclude:$_.Title -like '*Preview*'",
                "include:$true"
            ],
            "update_limit": 25
        },
        {
            "type": "powershell",
            "inline": [
                "New-Item -Path \"C:\\Apps\\Tools\" -ItemType \"Directory\" -Force -ErrorAction \"SilentlyContinue\" > $Null"
            ]
        },
        {
            "type": "file",
            "direction": "upload",
            "max_retries": 2,
            "sources": [
                "{{user `working_directory`}}/tools/rds"
            ],
            "destination": "C:\\Apps\\Tools"
        },
        {
            "type": "powershell",
            "scripts": [
                "build/rds/98_CitrixOptimizer.ps1",
                "build/rds/99_Bisf.ps1",
                "build/common/Get-Installed.ps1"
            ]
        },
        {
            "type": "file",
            "direction": "download",
            "max_retries": 1,
            "source": "C:\\Windows\\Temp\\Reports\\InstalledSoftware.json",
            "destination": "{{user `working_directory`}}\\reports\\InstalledSoftware.json"
        },
        {
            "type": "file",
            "direction": "download",
            "max_retries": 1,
            "source": "C:\\Windows\\Temp\\Reports\\InstalledHotfixes.json",
            "destination": "{{user `working_directory`}}\\reports\\InstalledHotfixes.json"
        },
        {
            "type": "file",
            "direction": "download",
            "max_retries": 1,
            "source": "C:\\Windows\\Temp\\Reports\\InstalledPackages.json",
            "destination": "{{user `working_directory`}}\\reports\\InstalledPackages.json"
        },
        {
            "type": "file",
            "direction": "download",
            "max_retries": 1,
            "source": "C:\\Windows\\Temp\\Reports\\InstalledFeatures.json",
            "destination": "{{user `working_directory`}}\\reports\\InstalledFeatures.json"
        },
        {
            "type": "file",
            "direction": "download",
            "max_retries": 1,
            "source": "C:\\Windows\\Temp\\Reports\\InstalledCapabilities.json",
            "destination": "{{user `working_directory`}}\\reports\\InstalledCapabilities.json"
        },
        {
            "type": "powershell",
            "inline": [
                "If (Get-Service -Name RdAgent -ErrorAction SilentlyContinue) { Set-Service RdAgent -StartupType Disabled }",
                "If (Get-Service -Name WindowsAzureTelemetryService -ErrorAction SilentlyContinue) { Set-Service WindowsAzureTelemetryService -StartupType Disabled }",
                "If (Get-Service -Name WindowsAzureGuestAgent -ErrorAction SilentlyContinue) { Set-Service WindowsAzureGuestAgent -StartupType Disabled }",
                "Remove-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Setup\\SysPrepExternal\\Generalize' -Name '*'",
                "If (Test-Path -Path \"C:\\Apps\") { Remove-Item -Path \"C:\\Apps\" -Recurse -Confirm:$False -ErrorAction \"SilentlyContinue\" }"
            ]
        },
        {
            "type": "windows-restart"
        },
        {
            "type": "powershell",
            "scripts": [
                "build/common/Sysprep-Image.ps1"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "packer-manifest-{{user `image_publisher`}}-{{user `image_offer`}}-{{user `image_sku`}}-{{user `image_date`}}.json"
        }
    ]
}